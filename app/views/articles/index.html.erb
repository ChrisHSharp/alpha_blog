<h1>Articles Listing page</h1>


  <table>
      <thead>

      <tr>
           <th>Title </th>
           <th>Description</th>
           <th>Actions</th>
         <tr>
      <thead>
  <table>

    <tbody>
      <% @articles.each do |article|  %>
        <tr>
          <td  headers="Title"> <%= article.title %> </td>
          <td headers="Description"> <%= article.description %> </td>
          <td><%= link_to 'Show', article_path(article)%> </td>
          <td ><%= link_to 'Edit', edit_article_path(article.id) %> </td>
          <td><%= link_to 'Delete', article_path(article.id), method: :delete, data: {confirm: "Are you sure?"} %> </td>
        </tr>
      <%end %>
    </tbody>
  </table>
<p>  <%= link_to 'Create new article', new_article_path %> </p>